<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="shapeClicked"
            android:scaleType="centerInside"
            android:src="@drawable/shape_charlie" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="shapeClicked"
            android:scaleType="centerInside"
            android:src="@drawable/shape_unicorn1" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="shapeClicked"
            android:scaleType="centerInside"
            android:src="@drawable/shape_unicorn2" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="shapeClicked"
            android:scaleType="centerInside"
            android:src="@drawable/shape_banana" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="shapeClicked"
            android:scaleType="centerInside"
            android:src="@drawable/shape_starfish" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="shapeClicked"
            android:scaleType="centerInside"
            android:src="@drawable/shape_frog" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="shapeClicked"
            android:scaleType="centerInside"
            android:src="@drawable/shape_liopleudoron" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="shapeClicked"
            android:scaleType="centerInside"
            android:src="@drawable/shape_speech" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="shapeClicked"
            android:scaleType="centerInside"
            android:src="@drawable/shape_thought" />

    </LinearLayout>

</LinearLayout>
